<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="besmart.team.homemanager.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="288sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/grocerySection"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="List of Groceries"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/groceryList"
                style="@style/Widget.AppCompat.ListView.Menu"
                android:layout_width="match_parent"
                android:layout_height="206dp"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/materialSection"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:text="List of Materials"
                android:textAppearance="@style/TextAppearance.AppCompat"
                android:textSize="20sp" />

            <ListView
                android:id="@+id/materialList"
                style="@style/Widget.AppCompat.ListView.Menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:footerDividersEnabled="false"
                android:headerDividersEnabled="true" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>
